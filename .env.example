# Copy this to `.env` on the server or add values in Railway/Render environment variables

CI_ENVIRONMENT = production

# Base URL (set to the public URL assigned by platform)
app.baseURL = 'https://your-app.on.railway.app'

# Database
database.default.hostname = your-db-host
database.default.database = your_db_name
database.default.username = your_db_user
database.default.password = your_db_password
database.default.DBDriver = MySQLi
database.default.port = 3306
